{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["./src/**/*"]
}
